{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": false,
		"declaration": false,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"jsx": "react",
		"lib": ["es2017", "esnext.asynciterable", "dom"],
		"typeRoots": [ "./node_modules/@types", "./node_modeules/@getflywheel/local" ],
		"module": "commonjs",
		"noImplicitReturns": true,
		"noImplicitAny": false,
		"outDir": "./lib",
		"resolveJsonModule": true,
		"rootDir": "./src",
		"sourceMap": true,
		"strict": false,
		"target": "es2015"
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"src"
	]
}
